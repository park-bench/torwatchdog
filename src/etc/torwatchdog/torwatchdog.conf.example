# torwatchdog.conf.example
# Example configuration for torwatchdog.

[General]

# Log file
log_file=/var/log/torwatchdog/torwatchdog.log

# Log level
log_level=info

# Tor cache directory
# TODO: This should probably be called tor_data_dir or something. It is more than a cache.
# TODO: I'm unconvinced this is the right location. Maybe a RAM disk is better? Maybe it shouldn't be deleted for performance?
cache_dir=/tmp/torwatchdog/cache

# The URL that torwatchdog checks
url=

# Tor will listen on this port
socks_port=7000

# Average delay between checks, in seconds
avg_delay=300

# Subject line, an arbitary string. Subject lines are not encrypted
subject=
