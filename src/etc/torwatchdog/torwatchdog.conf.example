# torwatchdog.conf.example
# Example configuration for torwatchdog.

[General]

# Specifies the verbosity of the program's log. Valid values are CRITICAL, ERROR, WARNING,
#   INFO, DEBUG, and TRACE. This value is case insensitive.
log_level=info

# The URL that torwatchdog checks.
url=

# Tor will listen on this port. (Default randomly chosen by developer.)
tor_socks_port=6613

# Maximum delay in seconds between URL polling attempts. The delay between URL polling
#   attempts (in seconds) is randomly selected between 0 and this value.
max_poll_delay=300

# Optional subject line, an arbitary string. Subject lines are NOT encrypted.
email_subject=
